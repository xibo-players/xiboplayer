{
  "name": "xibo-players-monorepo",
  "version": "1.0.0",
  "description": "Multi-platform Xibo-compatible digital signage players",
  "private": true,
  "workspaces": [
    "packages/*",
    "platforms/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:platforms",
    "build:core": "npm run build -w packages/core",
    "build:platforms": "npm run build:electron && npm run build:chrome",
    "build:electron": "npm run build -w platforms/electron",
    "build:chrome": "npm run build -w platforms/chrome",
    "build:android": "cd platforms/android && ./gradlew assembleRelease",
    "build:webos": "npm run build -w platforms/webos",
    "test": "npm run test --workspaces --if-present",
    "dev": "npm run dev -w packages/core",
    "dev:electron": "npm run dev -w platforms/electron",
    "version": "node scripts/version.js",
    "release": "npm run version && npm run build && npm run test && node scripts/release.js",
    "publish:libs": "npm publish --workspace=packages/layout-renderer --workspace=packages/communication-framework"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "xibo",
    "digital-signage",
    "player",
    "multi-platform",
    "pwa"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tecman/xibo-players.git"
  },
  "author": "Pau Aliagas <linuxnow@gmail.com>",
  "license": "AGPL-3.0-or-later"
}
