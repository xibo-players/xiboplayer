{
  "name": "xibo-players-monorepo",
  "version": "1.0.0",
  "description": "Multi-platform Xibo-compatible digital signage players",
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "private": true,
"scripts": {
    "build": "pnpm run build:core && pnpm run build:platforms",
    "build:core": "pnpm run build -w packages/core",
    "build:platforms": "pnpm run build:electron && pnpm run build:chrome",
    "build:electron": "pnpm run build -w platforms/electron || echo 'Electron build skipped'",
    "build:chrome": "pnpm run build -w platforms/chrome || echo 'Chrome build skipped'",
    "build:android": "cd platforms/android && ./gradlew assembleRelease",
    "build:webos": "pnpm run build -w platforms/webos || echo 'webOS build skipped'",
    "test": "pnpm run test:license-bypass",
    "test:license-bypass": "node scripts/test-license-bypass.js",
    "dev": "pnpm run dev -w packages/core",
    "dev:electron": "pnpm run dev -w platforms/electron",
    "sync-version": "node scripts/version.js",
    "release": "node scripts/release.js",
    "prerelease": "pnpm run sync-version"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "xibo",
    "digital-signage",
    "player",
    "multi-platform",
    "pwa"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tecman/xibo-players.git"
  },
  "author": "Pau Aliagas <linuxnow@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@xibosignage/xibo-layout-renderer": "^1.0.21"
  }
}
